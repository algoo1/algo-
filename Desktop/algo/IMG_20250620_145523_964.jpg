<svg viewBox="0 0 400 100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#A020F0"/>
      <stop offset="100%" stop-color="#FF00FF"/>
    </linearGradient>
  </defs>
  
  <!-- Main Algo text -->
  <text x="10" y="70" font-family="Inter, sans-serif" font-size="60" font-weight="bold" fill="url(#logoGradient)">Algo</text>
  
  <!-- Circuit pattern in the 'o' -->
  <g transform="translate(320, 50)">
    <!-- Outer circle -->
    <circle cx="0" cy="0" r="20" fill="none" stroke="white" stroke-width="2"/>
    
    <!-- Inner circuit elements -->
    <circle cx="-8" cy="-5" r="2" fill="white"/>
    <circle cx="8" cy="5" r="2" fill="white"/>
    
    <!-- Connection lines -->
    <line x1="-8" y1="-5" x2="8" y2="5" stroke="white" stroke-width="1"/>
    <line x1="-10" y1="0" x2="10" y2="0" stroke="white" stroke-width="1"/>
    <line x1="0" y1="-10" x2="0" y2="10" stroke="white" stroke-width="1"/>
  </g>
</svg>